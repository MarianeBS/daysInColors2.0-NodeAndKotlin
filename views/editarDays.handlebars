<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro Diário</title>
    <!-- CDN do Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 flex flex-col min-h-screen">
    <nav class="bg-white border-gray-200">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <a href="#" class="flex items-center space-x-3 rtl:space-x-reverse">
                <img src="/img/logo.png" class="h-36" alt="Logo" />
            </a>
            <button data-collapse-toggle="navbar-dropdown" type="button"
                class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
                aria-controls="navbar-dropdown" aria-expanded="false">
                <span class="sr-only">Open main menu</span>
                <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                    viewBox="0 0 17 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M1 1h15M1 7h15M1 13h15" />
                </svg>
            </button>
            <div class="hidden w-full md:block md:w-auto" id="navbar-dropdown">
                <ul
                    class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
                    <li>
                        <a href="/homePaciente"
                            class="text-pink-600 font-bold border-2 border-pink-600 rounded px-6 py-2 hover:text-white hover:bg-pink-600">Home</a>
                    </li>
                    <li>
                        <a href="/meus-diarios"
                            class="text-pink-600 font-bold border-2 border-pink-600 rounded px-6 py-2 hover:text-white hover:bg-pink-600">Diários</a>
                    </li>
                    <li>
                        <a href="/perfilPaciente"
                            class="text-pink-600 font-bold border-2 border-pink-600 rounded px-6 py-2 hover:text-white hover:bg-pink-600">Perfil</a>
                    </li>
                    <li>
                        <a href="/logout"
                            class="text-pink-600 font-bold border-2 border-pink-600 rounded px-6 py-2 hover:text-white hover:bg-pink-600">Sair</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Conteúdo principal -->
    <form action="/editarDiario/{{diaryId}}" method="POST" id="diarioForm">
        <main class="py-20 flex-grow bg-pink-100">
            <div class="flex flex-col items-center justify-center px-6 mx-auto lg:py-0">
                <div class="grid grid-cols-1 gap-4 text-left">
                    <div
                        class="w-full p-4 text-center bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700">
                        <div class="p-6 space-y-4 md:space-y-6 sm:p-8 text-center">
                            <h1
                                class="text-xl font-bold leading-tight tracking-tight text-pink-600 md:text-xl text-center flex items-center justify-center space-x-2">
                                Meu Diário
                            </h1>
                            <hr class="border-1 border-pink-400">
                            <div class="grid md:grid-cols-2 grid-cols-1 gap-20">
                                <div>
                                    <div class="grid grid-flow-col md:grid-cols-1 gap-4 text-left">
                                        <div class="relative max-w-sm">
                                            <div
                                                class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                                                <svg class="w-4 h-4 text-pink-500" aria-hidden="true"
                                                    xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                                                    viewBox="0 0 20 20">
                                                    <path
                                                        d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                                                </svg>
                                            </div>

                                            <input datepicker type="text" name="data" id="data" datepicker-format="dd/mm/yyyy"
                                                class="bg-pink-50 border border-pink-600 text-pink-600 font-bold text-sm focus:ring-pink-500 focus:border-pink-500 block w-full ps-10 p-2.5"
                                                placeholder="Selecione a Data" value="{{data}}" required
                                                autocomplete="off">
                                            <!-- Preencher com o valor de data -->
                                        </div>
                                    </div>
                                    <br>
                                    <hr class="border-1 border-pink-400">
                                    <br>
                                    <div>
                                        <p><strong>Selecione uma cor que representa seu dia:</strong></p>
                                    </div>
                                    <br>
                                    <div class="grid md:grid-cols-2 md:grid-cols-1 gap-4">
                                        <!-- Checkboxes para as cores -->
                                        <div>
                                            <div class="flex items-center mb-4">
                                                <input id="cor_triste" name="cor" type="checkbox" value="Triste"
                                                    class="w-4 h-4 accent-blue-600 text-green-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500" onclick="onlyOneCheckbox(this)">
                                                <label for="cor_triste"
                                                    class="ms-2 text-sm font-medium text-blue-600">Triste</label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="flex items-center mb-4">
                                                <input id="cor_estressante" name="cor" type="checkbox"
                                                    value="Estressante"
                                                    class="w-4 h-4 accent-red-600 text-red-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500" onclick="onlyOneCheckbox(this)">
                                                <label for="cor_estressante"
                                                    class="ms-2 text-sm font-medium text-red-600">Estressante</label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="flex items-center mb-4">
                                                <input id="cor_animado" name="cor" type="checkbox" value="Animado"
                                                    class="w-4 h-4 accent-yellow-600 text-yellow-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500" onclick="onlyOneCheckbox(this)">
                                                <label for="cor_animado"
                                                    class="ms-2 text-sm font-medium text-yellow-600">Animado</label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="flex items-center mb-4">
                                                <input id="cor_normal" name="cor" type="checkbox" value="Normal"
                                                    class="w-4 h-4 accent-gray-600 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500" onclick="onlyOneCheckbox(this)">
                                                <label for="cor_normal"
                                                    class="ms-2 text-sm font-medium text-gray-600 dark:text-gray-300">Normal</label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="flex items-center mb-4">
                                                <input id="cor_tranquilo" name="cor" type="checkbox" value="Tranquilo"
                                                    class="w-4 h-4 accent-green-600 text-green-600 bg-gray-100 border-green-500 rounded focus:ring-blue-500" onclick="onlyOneCheckbox(this)">
                                                <label for="cor_tranquilo"
                                                    class="ms-2 text-sm font-medium text-green-600">Tranquilo</label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="flex items-center mb-4">
                                                <input id="cor_solitario" name="cor" type="checkbox" value="Solitario"
                                                    class="w-4 h-4 accent-black text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500" onclick="onlyOneCheckbox(this)">
                                                <label for="cor_solitario"
                                                    class="ms-2 text-sm font-medium text-black">Solitário</label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="flex items-center mb-4">
                                                <input id="cor_engracado" name="cor" type="checkbox" value="Engraçado"
                                                    class="w-4 h-4 accent-orange-600 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500" onclick="onlyOneCheckbox(this)">
                                                <label for="cor_engracado"
                                                    class="ms-2 text-sm font-medium text-orange-600">Engraçado</label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="flex items-center mb-4">
                                                <input id="cor_frustrante" name="cor" type="checkbox" value="Frustrante"
                                                    class="w-4 h-4 accent-rose-600 text-rose-600 bg-gray-100 border-rose-600 rounded focus:ring-rose-600" onclick="onlyOneCheckbox(this)">
                                                <label for="cor_frustrante"
                                                    class="ms-2 text-sm font-medium text-rose-600">Frustrante</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div>
                                        <label for="motivo" class="block text-base text-gray-900 font-bold">Motivo da
                                            Cor:</label>
                                        <br>
                                        <textarea name="motivo" id="motivo" rows="4"
                                            class="block p-2.5 w-full text-sm text-gray-900 bg-pink-50 border border-pink-600 focus:ring-pink-500 focus:border-pink-600"
                                            placeholder="Escreva o motivo da escolha desta cor..." required
                                            autocomplete="off">{{motivo}}</textarea>
                                        <!-- Preencher com o motivo -->
                                        <br><br>
                                        <hr class="border-1 border-pink-400"><br>
                                        <div>
                                            <p><strong>Avalie seu dia (0 a 10):</strong></p>
                                        </div>
                                        <br>
                                        <div class="relative mb-6">
                                            <label for="avaliacao" class="sr-only">Avaliação do dia</label>
                                            <input id="avaliacao" name="avaliacao" type="range" value="{{avaliacao}}"
                                                min="0" max="10" step="1"
                                                class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-pink-600"
                                                required>
                                            <div class="flex justify-between mt-2">
                                                <span class="text-sm text-gray-500 font-bold">0</span>
                                                <span class="text-sm text-gray-500 font-bold">1</span>
                                                <span class="text-sm text-gray-500 font-bold">2</span>
                                                <span class="text-sm text-gray-500 font-bold">3</span>
                                                <span class="text-sm text-gray-500 font-bold">4</span>
                                                <span class="text-sm text-gray-500 font-bold">5</span>
                                                <span class="text-sm text-gray-500 font-bold">6</span>
                                                <span class="text-sm text-gray-500 font-bold">7</span>
                                                <span class="text-sm text-gray-500 font-bold">8</span>
                                                <span class="text-sm text-gray-500 font-bold">9</span>
                                                <span class="text-sm text-gray-500 font-bold">10</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button type="submit" id="btn-enviar" name="btn-enviar"
                                    class="w-1/2 py-3 text-white bg-pink-600 rounded-lg hover:bg-pink-800 focus:outline-none focus:ring-4 focus:ring-pink-300 font-medium text-sm px-5">Enviar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
        </main>
    </form>

    <script>
        // Função para validar se a cor foi selecionada
        document.getElementById('diarioForm').addEventListener('submit', function (event) {
            // Verifica se algum checkbox de cor foi selecionado
            const selectedColor = document.querySelector('input[name="cor"]:checked');

            if (!selectedColor) {
                // Se não houver cor selecionada, impede o envio do formulário
                alert('Por favor, selecione uma cor que representa seu dia!');
                event.preventDefault();  // Impede o envio do formulário
            }
        });

        function onlyOneCheckbox(checkbox) {
        var checkboxes = document.getElementsByName('cor');
        checkboxes.forEach(function(item) {
            if (item !== checkbox) item.checked = false;
        });
    }
    </script>



    <!-- Rodapé fixo ao final da página -->
    <footer class="p-6 bg-pink-600 text-center mt-auto">
        <p class="text-sm text-stone-50">Copyright &copy; 2024 Days In Colors | Todos os direitos reservados</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>

    <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-firestore.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-auth.js"></script>

</body>
</html>